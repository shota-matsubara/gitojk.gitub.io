    date_min = df['Date'].min()
    date_max = df['Date'].max()
    if pd.notna(date_min) and pd.notna(date_max):
        st.write(f"**æœŸé–“:** {date_min.strftime('%Yå¹´%mæœˆ')} ï½ {date_max.strftime('%Yå¹´%mæœˆ')}")
